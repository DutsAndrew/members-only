<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>

  <a href="/app">
    <button class="return-btn">
      Return to Home
    </button>
  </a>

  <div class="form-container">
    <form class="create-message-form" method="POST" action="">

      <input
        type="hidden"
        name="author"
        value="<%= typeof(currentUser) === 'undefined' ? '' : currentUser._id %>"
      >

      <div class="form-group">
        <label for="title">
          Title:
        </label>
        <input type="text" name="title" value="<%= typeof(messageTitle) === 'undefined' ? '' : messageTitle %>">
      </div>

      <div class="form-group">
        <label for="body">
          Body:
        </label>
        <input type="text" name="body" value="<%= typeof(messageBody) === 'undefined' ? '' : messageBody %>">
      </div>

      <button class="form-submit-btn">
        Create Message
      </button>

    </form>
  </div>

  <% if (typeof(errors) !== 'undefined') { %>
    <ul>
      <% errors.forEach((error) => { %>
        <li>
          <%= error.msg %>
        </li>
      <% }); %>
    </ul>
  <% }; %>

</body>
</html>